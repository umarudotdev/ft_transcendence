{
  "name": "ft_transcendence",
  "image": "ghcr.io/marcosgomesneto/bun-devcontainers/bun-postgresql:0.0.3",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [3000, 5173, 5432],
  "portsAttributes": {
    "3000": {
      "label": "API (ElysiaJS)",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Web (SvelteKit)",
      "onAutoForward": "openBrowser"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },
  "containerEnv": {
    "DATABASE_URL": "postgres://postgres:postgres@localhost:5432/ft_transcendence",
    "NODE_ENV": "development"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode",
        "bradlc.vscode-tailwindcss",
        "oxc.oxc-vscode",
        "ms-azuretools.vscode-docker",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "EditorConfig.EditorConfig",
        "usernamehw.errorlens",
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "editor.defaultFormatter": "oxc.oxc-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.oxc": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "[svelte]": {
          "editor.defaultFormatter": "svelte.svelte-vscode"
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "sudo service postgresql start",
  "remoteUser": "bun"
}
