# =============================================================================
# API Configuration (apps/api)
# =============================================================================

# Database (required)
DATABASE_URL=postgres://postgres:your-secure-password@localhost:5432/ft_transcendence

# Server
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# CORS (optional - comma-separated origins, localhost added automatically in dev)
CORS_ORIGINS=

# 42 OAuth (optional - obtain from https://profile.intra.42.fr/oauth/applications)
INTRA_CLIENT_ID=your-42-client-id
INTRA_CLIENT_SECRET=your-42-client-secret
INTRA_REDIRECT_URI=http://localhost:3000/api/auth/42/callback

# Encryption keys (required)
# Generate with: openssl rand -hex 32
TOTP_ENCRYPTION_KEY=
CHAT_ENCRYPTION_KEY=

# Email (optional - emails logged to console if not set)
RESEND_API_KEY=
EMAIL_FROM=noreply@transcendence.umaru.dev

# Logging
LOG_LEVEL=debug          # debug, info, warn, error
LOG_FORMAT=pretty        # json, pretty
LOG_SAMPLE_RATE=1.0      # 0.0-1.0, proportion of successful requests to log

# Graceful shutdown
SHUTDOWN_TIMEOUT_MS=30000

# =============================================================================
# Web Configuration (apps/web)
# =============================================================================

# API connection for server-side requests (optional, defaults to http://localhost:3000)
API_URL=http://localhost:3000

# =============================================================================
# Docker/PostgreSQL Configuration
# =============================================================================

POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=ft_transcendence
