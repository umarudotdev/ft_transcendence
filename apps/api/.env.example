# Database connection (required)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/ft_transcendence

# Server configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# CORS configuration (optional - comma-separated origins)
# In development, localhost variants are automatically added
CORS_ORIGINS=

# 42 OAuth (optional - OAuth disabled if not set)
# Obtain credentials from: https://profile.intra.42.fr/oauth/applications
INTRA_CLIENT_ID=
INTRA_CLIENT_SECRET=
INTRA_REDIRECT_URI=http://localhost:3000/api/auth/42/callback

# Encryption keys (required)
# Generate with: openssl rand -hex 32
TOTP_ENCRYPTION_KEY=
CHAT_ENCRYPTION_KEY=

# Email configuration (optional - emails logged if not set)
RESEND_API_KEY=
EMAIL_FROM=noreply@transcendence.umaru.dev

# Logging configuration
LOG_LEVEL=debug          # debug, info, warn, error
LOG_FORMAT=pretty        # json, pretty
LOG_SAMPLE_RATE=1.0      # 0.0-1.0, proportion of successful requests to log

# Graceful shutdown
SHUTDOWN_TIMEOUT_MS=30000
