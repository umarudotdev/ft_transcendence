# Database connection (required)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/ft_transcendence

# Server configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# 42 OAuth (optional - OAuth disabled if not set)
# Obtain credentials from: https://profile.intra.42.fr/oauth/applications
INTRA_CLIENT_ID=
INTRA_CLIENT_SECRET=
INTRA_REDIRECT_URI=http://localhost:3000/api/auth/42/callback

# TOTP encryption key (optional in dev, required in production)
# Generate with: openssl rand -hex 32
TOTP_ENCRYPTION_KEY=
