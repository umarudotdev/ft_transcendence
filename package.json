{
  "name": "ft_transcendence",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter './apps/*' dev",
    "dev:api": "bun run --filter '@ft/api' dev",
    "dev:web": "bun run --filter '@ft/web' dev",
    "build": "bun run --filter './apps/*' build",
    "build:api": "bun run --filter '@ft/api' build",
    "build:web": "bun run --filter '@ft/web' build",
    "test": "bun run --filter './apps/*' test",
    "test:api": "bun run --filter '@ft/api' test",
    "test:web": "bun run --filter '@ft/web' test",
    "lint": "bun x ultracite check",
    "lint:fix": "bun x ultracite fix",
    "format": "bun x oxfmt --write .",
    "format:check": "bun x oxfmt --check .",
    "typecheck": "bun run typecheck:api && bun run typecheck:web",
    "typecheck:api": "bun run --filter '@ft/api' tsc -- --noEmit",
    "typecheck:web": "bun run --filter '@ft/web' check",
    "db:migrate": "bun run --filter '@ft/api' migrate",
    "db:generate": "bun run --filter '@ft/api' generate",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "lefthook": "^2.0.13",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "ultracite": "7.0.6",
    "vitepress": "^2.0.0-alpha.15"
  }
}
